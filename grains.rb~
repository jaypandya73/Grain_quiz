class Grains
    
    def self.square(num)
    @grains_array ||= (0..63).map! {|j| 2**j } #or you can do @grains_array = (0..63).map {|j| 2**j }
                                                # || sign used for not to initialize array every time once initialize we can use throughout program.
    @grains_array[num - 1]
    end
    
    def self.total
    @grains_array.inject(&:+)
    end
end

